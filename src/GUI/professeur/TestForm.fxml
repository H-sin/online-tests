<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="960.0" stylesheets="@../gui.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.professeur.TestFormController">
   <children>
      <ScrollPane fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" pannable="true" pickOnBounds="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox maxWidth="1.7976931348623157E308" minWidth="320.0" spacing="32.0">
               <children>
                  <Label text="Détails du test">
                     <font>
                        <Font name="Ubuntu" size="18.0" />
                     </font></Label>
                  <JFXTextField fx:id="titreTestField" focusColor="#046dd5" labelFloat="true" promptText="Titre du test" />
                  <JFXTextField fx:id="testDurationField" focusColor="#046dd5" labelFloat="true" maxWidth="144.0" promptText="Durée (en minutes)" />
                  <VBox prefWidth="100.0">
                     <children>
                        <JFXToggleButton fx:id="lockedToggle" size="9.0" text="Verouiller en mode plein écran" toggleColor="#046dd5" toggleLineColor="#a0d1ff">
                           <VBox.margin>
                              <Insets top="-4.0" />
                           </VBox.margin>
                        </JFXToggleButton>
                        <JFXToggleButton fx:id="penaliteToggle" size="9.0" text="Pénalités (système canadien)" toggleColor="#046dd5" toggleLineColor="#a0d1ff" />
                     </children>
                     <padding>
                        <Insets left="-8.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="16.0">
                     <children>
                        <Label text="Groupes qui passeront le test">
                           <font>
                              <Font name="Ubuntu" size="18.0" />
                           </font>
                        </Label>
                        <HBox spacing="16.0">
                           <children>
                              <JFXComboBox fx:id="groupesComboBox" focusColor="#046dd5" promptText="Groupe à ajouter" />
                              <JFXButton fx:id="addGroupeButton" buttonType="RAISED" onAction="#addGroupe" styleClass="bg-gray" text="Ajouter" />
                           </children>
                        </HBox>
                        <ScrollPane pannable="true" prefHeight="56.0" style="-fx-border-color: #eee;" vbarPolicy="NEVER">
                           <content>
                              <HBox fx:id="groupesBox" minWidth="480.0" prefHeight="26.0" spacing="8.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox spacing="32.0">
                     <children>
                        <Label text="Questions">
                           <font>
                              <Font name="Ubuntu" size="18.0" />
                           </font>
                        </Label>
                        <VBox fx:id="questionsBox" spacing="16.0" />
                        <JFXButton fx:id="addQuestionButton" buttonType="RAISED" onAction="#addQuestion" styleClass="bg-gray" text="Ajouter nouvelle question" />
                     </children>
                  </VBox>
                  <JFXButton fx:id="submitButton" alignment="CENTER_RIGHT" buttonType="RAISED" onAction="#submitTest" styleClass="bg-blue" text="Envoyer" textFill="WHITE">
                     <font>
                        <Font name="Ubuntu" size="20.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
